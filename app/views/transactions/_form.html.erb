<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :source, { label_method: :id, prompt: "Choose an account" } %>
    <%= f.association :destination, { label_method: :id, prompt: "Choose an account" } %>
    <%= f.input :amount %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
