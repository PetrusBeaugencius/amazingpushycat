<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <p>
			<div class="page-header">
			  <h1>Listing Accounts <small>Here is the list of your accounts</small></h1>
			</div>
			<table class="table table-striped">
			  <thead>
			    <tr>
			      <th>Num√©ro</th>
			      <th>Solde</th>
			      <th>User</th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @accounts.each do |account| %>
						<% 
							classValue = "success" if account.solde > 0
							classValue = "danger" if account.solde < 0
						%>
			      <tr class="<%= classValue %>">
			        <td><%= account.id %></td>
			        <td><%= number_to_currency(account.solde, locale: :en) %></td>
			        <td><%= account.user.name %></td>
			        <td>
								<%= link_to 'Show', transactions_path %>
								|
								<%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %>
							</td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>

			<br>

			<%= link_to 'New Account', new_account_path, class: "btn btn-primary pull-right" %>
			</p>
  </div>
</div>

